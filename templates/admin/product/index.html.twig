{% extends 'base.html.twig' %}

{% block title %}Produtos{% endblock %}

{% block body %}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Produtos</h1>
            <a href="/admin/products/create" class="btn btn-success">Criar Produto</a>
        </div>
    </div>    
    <div class="col-12">
        <table class="table datatables">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Criado em</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td> {{ product.id }} </td>
                        <td> {{ product.name }} </td>
                        <td> {{ product.createdAt | date('d/m/Y H:i:s') }} </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
